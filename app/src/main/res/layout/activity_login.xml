<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/frameshape"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:background="@drawable/frameshape"


        android:layout_width="fill_parent"
        android:layout_centerInParent="true"
        android:layout_height="match_parent"
        >
        <EditText
            android:textCursorDrawable="@drawable/cursor_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColorHint="@android:color/black"
            android:hint="Enter Email Id"
            android:textColor="@android:color/black"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:id="@+id/enrollment"
            android:background="@drawable/editshape" />



        <TextView
            android:text="STUDENT ONLY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textSize="25dp"
           android:gravity="center"

            android:typeface="normal"
            android:layout_marginLeft="50dp"
            android:textColor="@android:color/white"
            android:id="@+id/textView"
            android:textStyle="normal" />

        <Button
            android:id="@+id/login"
            android:text="LOGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/rounded_corner_bottom"
            android:textColor="@android:color/white"
            android:layout_marginTop="200dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="50dp"
            android:ems="20" />


        <EditText
            android:textCursorDrawable="@drawable/cursor_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="@android:color/black"
            android:hint="**********"
            android:background="@drawable/editshape"
            android:textColor="@android:color/black"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:id="@+id/password"
            />

        <TextView
            android:text="Forgot Password?"
            android:textSize="13dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="260dp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgotpwd"
            android:textStyle="normal"
            android:textAllCaps="true"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_hat"
            android:id="@+id/imageView"
            android:scaleType="center"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
           android:scaleType="fitEnd"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
           />
        <TextView
            android:text="Faculty Login"
            android:textSize="13dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="280dp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/faculty"
            android:textStyle="normal"
            android:textAllCaps="true"
            />

    </RelativeLayout>


</RelativeLayout>

